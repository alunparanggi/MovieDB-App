<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation_graph"
    app:startDestination="@id/menu_movie">

    <fragment
        android:id="@+id/menu_movie"
        android:name="com.tonicapp.movieapp.ui.movie.MovieFragment"
        android:label="Movies"
        tools:layout="@layout/fragment_movie" >
        <action
            android:id="@+id/action_menu_movie_to_detailFragment"
            app:destination="@id/detailFragment" />
    </fragment>
    <fragment
        android:id="@+id/menu_favorite"
        android:name="com.tonicapp.movieapp.ui.favorite.FavoriteFragment"
        android:label="Favorite Movie"
        tools:layout="@layout/fragment_favorite" >
        <action
            android:id="@+id/action_menu_favorite_to_detailFragment"
            app:destination="@id/detailFragment" />
    </fragment>
    <fragment
        android:id="@+id/detailFragment"
        android:name="com.tonicapp.movieapp.ui.detail.DetailFragment"
        android:label="{title}"
        tools:layout="@layout/fragment_detail" >
        <argument
            android:name="movie"
            app:argType="com.tonicapp.movieapp.data.model.Movie" />
        <argument
            android:name="title"
            app:argType="string" />
    </fragment>
</navigation>